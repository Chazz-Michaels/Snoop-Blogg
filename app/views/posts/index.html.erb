<div class="container">
  <div class="col-sm-10 offset-sm-1 col-xs-12">
    <% @posts.each do |post| %>
    <div class="col-xs-12 text-center">
      <div class="text-center">
        <h2><%= post.title %></h2>
        <h6>- <%= post.created_at.strftime('%b %d, %Y') %> -</h6>
      </div>
      <div class="blog-body-preview">
        <%= raw(post.body).truncate(358) %>
      </div>
      <div class="text-center read-more-wrapper">
        <%= link_to "READ MORE", post_path(post), class:'read-more' %>
      </div>
      <% if admin_signed_in? %>
        <%= link_to "Show", post_path(post), class: "btn show-button" %>
        <%= link_to "Edit", edit_post_path(post), class: "btn edit-button" %>
        <%= link_to "Delete", post_path(post), class: "btn delete-button", data: {:confirm => "Are you sure?"}, method: :delete %>
      <% end %>
      <hr />
    </div>
    <% end %>
  </div>
</div>
